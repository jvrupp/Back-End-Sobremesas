

{%extends "layout.njk"%}

{%block content%}

        <div class="cabecalho"><h3>Sobremesas</h3></div>
        <section class="cards">
        {%for item in items%}
            <div class="card">
                <div class="card-image">
                    <img src="{{item.img}}" alt="Doce">
                </div>
                <div class="card-phone">
                    <p>{{item.name}}</p>
                </div>
                <div class="card-info">
                    <p class="price">{{item.price}}</p>
                    <p class="phone">{{item.phone}}</p>
                </div> 
            </div>
        {%endfor%}
        </section>


        <div class="links">
            <a href="https://pt-br.facebook.com/">Facebook</a>
            <a href="https://www.instagram.com/">Instagram</a>
            <a href="https://br.linkedin.com/">Linkedin</a>
        </div>
{%endblock%}